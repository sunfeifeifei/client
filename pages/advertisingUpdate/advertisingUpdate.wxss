/* pages/advertisingUpdate/advertisingUpdate.wxss */
page{
  background: #efefef;
  padding: 20rpx 0 20rpx 0;
  box-sizing: border-box;
}
.row{
  display: flex;
  align-items: center;
  padding: 24rpx 10rpx 24rpx 30rpx;
  background: #ffffff;
  border-bottom: 1px solid #eeeeee;
  justify-content: space-between;
  margin-bottom: 14rpx;
}
.title{
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}
.text{
  font-size: 30rpx;
  color: #aaaaaa;
}
.row image{
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.btn{
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  background: #cbaa75;
  border-radius: 50px;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
}

/*mask*/  
.drawer_screen1 {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.4;
  overflow: hidden;  
}  
/*content*/  
.drawer_box1 { 
  width: 510rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 34%;  
  left: 9%;  
  z-index: 1001;  
  /* background: #FFFFFF;   */
  margin: -150px 50rpx 0 50rpx;  
}  
.drawer_content1 { 
  border-radius: 20rpx;
  background-size: cover; 
  padding: 30rpx;
  background: #ffffff;
} 
.drawer_content1 image{
  width: 100%;
} 
.btn_x1{
  text-align: center;
  margin-top: 40rpx;
}
.btn_x1 view{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50px;
  color: #ffffff;
  background: #5b5b5b;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.detail-row{
  display: flex;
  flex-flow: column;
  align-items: flex-start;
  font-size: 28rpx;
  color: #333333;
  padding: 18rpx 0;
}
.detail-title{
  color: #333333;
  font-weight: 600;
  margin-right: 6rpx;
  width: 150rpx;
}
.detail-value{
  flex: 1;
}
.detail-row-title{
  text-align: center;
  font-size: 34rpx;
  color: #333333;
  font-weight: 600;
  margin: 20rpx;
}