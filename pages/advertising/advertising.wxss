/* pages/advertising/advertising.wxss */
page{
  background: #efefef;
  padding:0 24rpx 24rpx 24rpx;
  box-sizing: border-box;
}
.card{
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  height: 450rpx;
  margin-top: 24rpx;
}
.card-left{
  width: 240rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.videoImg{
  width: 100%;
  height: 450rpx;
  border-radius: 16rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.cover{
  width: 100%;
  height: 340rpx;
  border-radius: 16rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background: #000000;
  opacity: 0.3;
}
.statusImg{
  z-index: 2;
  width: 70rpx;
  height: 70rpx;
}
.card-right{
 flex: 1;
 padding: 10rpx 26rpx;
 box-sizing: border-box; 
}
.title{
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
}
.text{
  font-size: 24rpx;
  color: #aaaaaa;
}
.row{
  padding: 4rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.update{
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  background: #cbaa75;
  border-radius: 50px;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
}
.add{
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  background: #5b5b5b;
  border-radius: 50px;
}
.add image{
  height: 54rpx;
  width: 54rpx;
}