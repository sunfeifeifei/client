/* pages/center/center.wxss */
page{
  padding:10rpx 30rpx;
  background-image: linear-gradient(#fcfafa , #f0f0f0);
  box-sizing: border-box;
}
.card{
  color: #fff;
  display: flex;
  align-items: center;
  background: #cbaa75;
  height: 320rpx;
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.icon{
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
}
.status{
  width: 120rpx;
  height: auto;
}
.name{
  font-size: 34rpx;
  font-weight: 600;
}
.des{
  font-size: 28rpx;
  color: #edd8b6;
  margin-top: 6rpx;
  margin-bottom: 24rpx;
}
.card-right{
  display: flex;
  height: 158rpx;
  flex-flow: column;
  justify-content: space-between;
  
}
.row{
  display: flex;
  align-items: center;
  background: #ffffff;
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
  padding: 30rpx 10rpx 30rpx 30rpx;
  margin: 12rpx 0;
  border-radius: 8rpx;
}
.row-img-left{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.row-img-right{
  width: 40rpx;
  height: 40rpx;
}