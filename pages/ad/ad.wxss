/* pages/ad/ad.wxss */
page{
  background: #efefef;
  padding:0 24rpx 24rpx 24rpx;
  box-sizing: border-box;
}
.card{
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  height: 340rpx;
  margin-top: 24rpx;
}
.card-left{
  width: 210rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.videoImg{
  width: 100%;
  height: 340rpx;
  border-radius: 16rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.cover{
  width: 100%;
  height: 340rpx;
  border-radius: 16rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background: #000000;
  opacity: 0.3;
}
.statusImg{
  width: 70rpx;
  height: 70rpx;
  z-index: 2;
}
.card-right{
 flex: 1;
 padding: 24rpx 30rpx 24rpx 30rpx;
 box-sizing: border-box; 
}
.title{
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}
.time{
  font-size: 24rpx;
  color: #aaaaaa;
}
.row{
  display: flex;
  align-items: center;
}
.row image{
  width: 30rpx;
  height: 30rpx;
}
.img-box{
  display: flex;
  justify-content: flex-end;
}
.img-box image{
  width: 100rpx;
  height: 100rpx;
}
.add-card{
  height: 260rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  margin-top: 24rpx;
  border-radius: 16rpx;
}
.add-card image{
  width: 100rpx;
  height: 100rpx;
}