/* pages/videoUpload/videoUpload.wxss */
page{
  background: #efefef;
}
.card{
  height: 680rpx;
  width: 388rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 80rpx auto
}
.videoImg{
  width: 100%;
  height: 680rpx;
  border-radius: 16rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.cover{
  width: 100%;
  height: 680rpx;
  border-radius: 16rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  padding: 26rpx 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-items: center;
}
.cover1{
  width: 100%;
  height: 680rpx;
  border-radius: 16rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background: #999999;
  color: #ffffff;
  padding: 26rpx 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}
.statusImg{
  width: 120rpx;
  height: 120rpx;
  z-index: 2;
}
.btn{
  width: 82%;
  margin-left: 9%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  background: #cbaa75;
  border-radius: 50px;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.row{
  display: flex;
  align-items: center;
}
.row image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 6rpx;
}